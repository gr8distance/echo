extends ../layout

block content
	section.parallax-container
		.parallax
			if user.image
				img(src="#{user.image}")
			else
				img(src="/images/colorfull2.jpg").blur
				
	.row
		.col.s12.m4
			article.card
				.card-content
					h1.font_size_28.cyan-text= user.name
					if user.description
						p.font_size_14!= user.description.replace(/\n/g,"<br/>")

				.card-action
					a.btn-flat.cyan.white-text フォロー

		.col.s12.m8
			for post in posts
				include ../home/_post
